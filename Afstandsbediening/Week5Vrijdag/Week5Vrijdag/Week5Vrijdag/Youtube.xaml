<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Week5Vrijdag.Youtube">
    <ContentPage.Content>
        <RelativeLayout>
            <!--YouTube terug -->
            <Button x:Name="YoutubeBack"
                    Text="Terug naar hoofdmenu"
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Constant=-200}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Constant=-80}"/>

            <!--Youtube pagina bereikt-->
            <Button x:Name="YoutubeText"
                    Text="Klik op mij" 
                    RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Constant=-200}"
                    RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height, Constant=-120}"/>
            <!--Youtube icon-->
            <Image Source="youtubeicon.png"/>


            </RelativeLayout>
    </ContentPage.Content>
</ContentPage>